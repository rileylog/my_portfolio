<%= simple_form_for @picture, url: create_image_path(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :image, required: true %>
    <%= f.input :title %>
    <%= f.input :description %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
