<div class='page-header'>
  <h1> Blog </h1>
</div>
<div class='row'>
  <% @posts.each do |post| %>
    <div class='post-tile col-xs-6 col-sm-4 col-md-3 no-gutters' >
      <div class='post-info'>
        <h4><%=post.subject%></h4>
        <p><%=post.author%></p>
        <p><a href="#post-<%=post.id %>" >Read More</a></p>
      </div>

    <%= image_tag post.pictures.first.image.url(:medium), class: 'img-responsive' unless post.pictures.empty? %>
    </div>
  <% end %>
</div>